# Coverage.py configuration file

[run]
source = .
omit =
    */migrations/*
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */env/*
    manage.py
    */config/wsgi.py
    */config/asgi.py

[report]
# Show missing lines in coverage report
show_missing = True

# Fail if coverage is below this percentage
fail_under = 80

# Exclude these lines from coverage
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod

[html]
directory = htmlcov
